@model IEnumerable<Quiz.Services.UserQuizViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<table class="table table-sm table-striped table-hover table-border">
    <tr>
    <th>
        Quiz name
    </th>
        <th>
            Action
        </th>
    </tr>
    @foreach (var quiz in Model)
    {
        <tr>
            <td>
                @quiz.Title
            </td>
            <td>
                @if (quiz.Status == Quiz.Services.QuizStatus.NotStarted)
                {
                    <a href="/Quiz/Test/@quiz.QuizId" class="btn btn-seccess">
                        Start test
                </a>
                }
                else if (quiz.Status == Quiz.Services.QuizStatus.InProgress)
                {
                    <a href="/Quiz/Test/@quiz.QuizId" class="btn btn-warning">
                        Continue test
                </a>
                }
                else
                {
                    <a href="/Quiz/Results/@quiz.QuizId" class="btn btn-secondary">
                        View results
                </a>
                }
            </td>
        </tr>
    }
</table>
